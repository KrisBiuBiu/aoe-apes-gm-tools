<h3 class="form-signin-heading"><%= ctx %></h3>
<form action="<%= url %>" class="form-signin" method="post">
<input type="text" class="input-block-level" id="region" name="region" value="1" req="true" placeholder="大区ID" exp="^[1-9]\d*$" ts='大区ID格式错误'>
<input type="text" class="input-block-level" id="userid" name="userid" req="true" placeholder="玩家ID" exp="^[1-9]\d*$" ts='玩家ID格式错误'>
<div><textarea rows="3" id="jsonstr" name="jsonstr" req="true" placeholder="邮件内容 json格式的数据"></textarea></div>
<button class="btn btn-large btn-primary" type="submit">提交</button>
  <% if (csrf) { %>
<input type="hidden" name="_csrf" value='<%= csrf %>'>
  <% } %>
</form>

<script type="text/javascript">
    F.st();
</script>
<pre>
模板对象:
type NewMail struct {
	Title   int32         `json:"title"`
	Content int32         `json:"content"`
	Tparms  []Parm `json:"title_parms"`
	Cparms  []Parm `json:"content_parms"`
}

type Parm struct {
	Pos  int8   `json:"pos"`  //参数位于content中的下标
	Type int8   `json:"type"` //多语言邮件参数类型
	Val  string `json:"val"`  //参数值
}
</pre>